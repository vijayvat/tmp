terraform {
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~>3.0"
    }
  }
}

provider "azurerm" {
  features {}
}

# Just query existing resource group (no changes)
data "azurerm_resource_group" "test" {
  name = "YOUR_RG_NAME"  # Replace with your actual RG name
}

# Output the RG info to verify it worked
output "rg_location" {
  value = data.azurerm_resource_group.test.location
}

output "rg_id" {
  value = data.azurerm_resource_group.test.id
}
